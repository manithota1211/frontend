apiVersion: v1
kind: Pod
metadata:
  name: myapp-pod
  labels:
    app: myapp
spec:
  containers: 
  - name: myapp-container
    image: myapp-image:latest
    ports:
    - containerPort: 80
    env:
    - name: ENVIRONMENT
      value: "production" 
    - name: LOG_LEVEL
      value: "info"
    resources:
      requests:
        memory: "256Mi"
        cpu: "500m" 
      limits:
        memory: "512Mi"